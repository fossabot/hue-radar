{
  "compilerOptions": {
    "outDir": "bin",
    "rootDir": "src",
    "lib": [
      "ESNext"
    ],
    "target": "ES5",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
